<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/space_xxx_large"
        android:layout_height="@dimen/space_xxx_large"
        android:layout_marginEnd="@dimen/space_medium_xx_large"
        android:layout_marginStart="@dimen/space_large"
        android:layout_marginTop="@dimen/space_large"
        android:layout_marginBottom="@dimen/space_large"
        android:background="@drawable/bg_circle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_large"
        android:layout_toEndOf="@id/thumbnail"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/space_4x_large"
            android:layout_height="@dimen/space_small_medium"
            android:background="@drawable/bg_curve" />

        <View
            android:layout_width="@dimen/space_5x_large"
            android:layout_height="@dimen/space_small_medium"
            android:layout_marginTop="@dimen/space_medium_xx_large"
            android:background="@drawable/bg_curve" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_xx_small"
        android:background="@color/light_grey"
        android:layout_below="@id/thumbnail"/>
</RelativeLayout>